            dtProductCopy.Columns.Add(dtColumnDescriptionFordtProductCopy);

            DataColumn dtColumnProductTypeIdFordtProductCopy = new DataColumn();
            dtColumnProductTypeIdFordtProductCopy.DataType = typeof(string);
