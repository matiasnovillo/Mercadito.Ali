            dtProductCopy.Columns.Add(dtColumnProductTypeIdFordtProductCopy);

            DataColumn dtColumnImageFordtProductCopy = new DataColumn();
            dtColumnImageFordtProductCopy.DataType = typeof(string);
            dtColumnImageFordtProductCopy.ColumnName = "Image";
            dtProductCopy.Columns.Add(dtColumnImageFordtProductCopy);

            
            #endregion

            dtProduct = productRepository.GetAllInDataTable();

            foreach (DataRow DataRow in dtProduct.Rows)
